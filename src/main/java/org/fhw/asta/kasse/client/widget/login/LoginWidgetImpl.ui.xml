<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:HTMLPanel>
	    <table>
	    <tr>
	    <td>
		    Email:	        
	    </td>
		<td>
			<g:TextBox ui:field="emailTextBox"  />
		</td>
		</tr>
		<tr>
		<td>
			Password:
		</td>
		<td>
			<g:TextBox ui:field="passwordTextBox" />
		</td>
		</tr>
		<tr>
		<td>
		</td>
		<td style="text-align:right;">
			<g:Button styleName="{style.important}" ui:field="submitButton" text="Login" />
		</td>
		</tr>
	    </table>
	</g:HTMLPanel>
</ui:UiBinder> 