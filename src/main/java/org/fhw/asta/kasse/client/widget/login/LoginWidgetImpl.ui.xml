<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:style>
		.paddingTop {
			padding-top: 60px;
		}
	</ui:style>
	
	<g:HTMLPanel styleName="container {style.paddingTop}">
	
		<form class="form-horizontal" onsubmit="return false;">
		
			<legend>Login</legend>
		
  			<div class="control-group">
    			<label class="control-label" for="inputEmail">RZ-Login</label>
    			<div class="controls">
	    			<g:TextBox ui:field="emailTextBox" styleName="" focus="true"/>
    			</div>
  			</div>
  
  			<div class="control-group">
    			<label class="control-label" for="inputPassword">Password</label>
    			<div class="controls">
					<g:TextBox ui:field="passwordTextBox" styleName="" />
   	 			</div>
  			</div>
  			
 			<div class="control-group">
    			<div class="controls">
    				<g:SubmitButton styleName="btn btn-primary" ui:field="submitButton" text="Sign in" />
    			</div>
  			</div>
		</form>
	</g:HTMLPanel>
</ui:UiBinder> 